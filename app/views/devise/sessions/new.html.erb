<!-- Sign up modal -->
<div class="modal fade" id="signup" tabindex="-1" style="margin-top: 50px;" role="dialog" aria-labelledby="signup" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Sign up </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body signup-modal-body">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

                 <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :id => 'signupEmail', :class => 'form-control' %>
  </div>
                    <div class="form-group">
    <%= f.label :First_Name %><br />
    <%= f.text_field :First_Name, autofocus: true, :id => 'fName', :class => 'form-control'  %>
  </div>


                
                    <div class="form-group">
    <%= f.label :Last_Name %><br />
    <%= f.text_field :Last_Name, autofocus: true, :id => 'lName', :class => 'form-control'  %>
  </div>



  <div class="form-group">
    <%= f.label :phone_number %><br />
    <i>XXX-XXX-XXXX</i>
    <%= f.text_field :phone_number, autofocus: true, :id => 'phone', :class => 'form-control'  %>
  </div>

<div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :id => 'signupPass', :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:id => 'conPass', :class => 'form-control'%>
  </div>



                <div class="form-group">
    <%= f.submit "Sign up" , :class => "signin btn btn-primary" %>
  </div>


            
                   
                <% end %>

            </div>
